<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Financefinall.Views.AddTransaction"
            xmlns:viewmodels="clr-namespace:Financefinall.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:CategoriesViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" Margin="10">
                <Button Command="{Binding CancelButton}"  BackgroundColor="Transparent" TextColor="#007AFF"   Text="Cancel"></Button>
                <Label HorizontalOptions="CenterAndExpand" Text="Add Transaction" Margin="10" FontSize="Large"  TextColor="Black" FontAttributes="Bold"></Label>
                <Button Command="{Binding SaveBudget}" BackgroundColor="Transparent" TextColor="#007AFF" FontAttributes="Bold"  Text="Save"></Button>
            </StackLayout>
            <Entry Placeholder="Amount $0.00" Margin="10" Text="{Binding BudgetLimit,  Mode=TwoWay }" ></Entry>
            <DatePicker Margin="10"></DatePicker>
            <Entry Placeholder="Note" Margin="10"  ></Entry>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>