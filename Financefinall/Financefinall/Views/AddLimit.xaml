<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Financefinall.Views.AddLimit"
    xmlns:viewmodels="clr-namespace:Financefinall.ViewModels">

    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" Margin="10">
                <Button Command="{Binding CancelButton}"  BackgroundColor="Transparent" TextColor="#007AFF"   Text="Cancel"></Button>
                <Label HorizontalOptions="CenterAndExpand" Text="Add Budget" Margin="10" FontSize="Large"  TextColor="Black" FontAttributes="Bold"></Label>
                <Button Command="{Binding SaveBudget}" BackgroundColor="Transparent" TextColor="#007AFF" FontAttributes="Bold"  Text="Save"></Button>
            </StackLayout>
            <Entry Placeholder="$0.00" Margin="10" Text="{Binding BudgetLimit,  Mode=TwoWay }" ></Entry>
            <Label HorizontalOptions="Center"  FontSize="Medium">Your expected Budget this month </Label>
            <Label HorizontalOptions="Center" FontSize="Medium" TextColor="Black" FontAttributes="Bold">$360</Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>